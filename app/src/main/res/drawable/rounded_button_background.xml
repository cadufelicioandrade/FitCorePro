<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Define a cor de fundo do botão -->
    <solid android:color="@color/white"/>

    <!-- Define o arredondamento dos cantos.
         Quanto maior o valor em 'dp', mais redondo será o canto. -->
    <corners android:radius="16dp" />

    <!-- Opcional: Adiciona uma borda (linha) ao redor do botão -->
    <stroke
        android:width="3dp"
        android:color="@color/black" /> <!-- Use uma cor de sua preferência -->



    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />

</shape>
