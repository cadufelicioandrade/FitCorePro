<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="7dp">

    <TextView
        android:id="@+id/dt_diet_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:contentDescription="@null"
        android:text="@string/hoje"
        android:textColor="@color/gray_700"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <Space
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <ImageButton
        android:id="@+id/arrow_left_diet_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:background="@color/white"
        android:contentDescription="@null"
        android:src="@drawable/outline_keyboard_double_arrow_left_24" />

    <ImageButton
        android:id="@+id/arrow_right_diet_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:background="@color/white"
        android:contentDescription="@null"
        android:src="@drawable/outline_keyboard_double_arrow_right_24" />

</LinearLayout>
