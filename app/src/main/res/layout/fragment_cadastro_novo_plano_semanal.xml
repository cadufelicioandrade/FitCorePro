<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.CadastroPlanoSemanalFragment">

    <!-- =========== BLOCO 1: CABEÇALHO FIXO =========== -->

    <TextView
        android:id="@+id/header_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/deep_teal"
        android:gravity="center"
        android:padding="12dp"
        android:text="@string/cadastro_plano_semanal"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_nome_plano_semanal"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Nome do Plano"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_title">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_nome_plano"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"
            android:maxLines="1" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_dia_semana"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Dia da Semana"
        app:layout_constraintEnd_toEndOf="@id/layout_nome_plano_semanal"
        app:layout_constraintStart_toStartOf="@id/layout_nome_plano_semanal"
        app:layout_constraintTop_toBottomOf="@id/layout_nome_plano_semanal">

        <AutoCompleteTextView
            android:id="@+id/autocomplete_dia_semana"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            tools:text="Segunda-feira" />
    </com.google.android.material.textfield.TextInputLayout>

    <View
        android:id="@+id/divider_header"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="@id/layout_dia_semana"
        app:layout_constraintStart_toStartOf="@id/layout_dia_semana"
        app:layout_constraintTop_toBottomOf="@id/layout_dia_semana" />


    <!-- =========== BLOCO 2: LISTA DINÂMICA DE REFEIÇÕES (PARA O DIA SELECIONADO) =========== -->

    <TextView
        android:id="@+id/label_refeicoes_adicionadas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Refeições Adicionadas"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/divider_header"
        app:layout_constraintTop_toBottomOf="@id/divider_header" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_refeicoes_do_dia"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:clipToPadding="false"
        android:paddingBottom="180dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_refeicoes_adicionadas"
        tools:itemCount="4"
        tools:listitem="@layout/item_refeicao_cadastro_plano_semanal" />


    <!-- =========== BLOCO 3: FORMULÁRIO DE ADIÇÃO (FLUTUANTE) =========== -->

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_add_refeicao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Campo para o nome da Refeição (ex: Almoço) -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_nova_refeicao_nome"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nome da Refeição (ex: Almoço)">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_nova_refeicao_nome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords"
                    android:maxLines="1" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Divisor visual -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Alimentos da Refeição"
                android:textStyle="bold" />

            <!-- ================== NOVA SEÇÃO DE ALIMENTOS ================== -->

            <!-- RecyclerView para a lista de alimentos que serão adicionados -->
            <!-- Ele aparecerá vazio no início e será populado dinamicamente -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_alimentos_para_adicionar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="2"
                tools:listitem="@layout/item_alimento_cadastro" />

            <!-- Layout horizontal para os campos de adição de UM novo alimento -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- Campo para NOME do Alimento -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout_novo_alimento_nome"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Alimento">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_novo_alimento_nome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Campo para GRAMAS -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout_novo_grama_alimento"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:hint="Gramas">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_novo_grama_alimento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Botão para adicionar o alimento à lista de cima -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_add_alimento_a_refeicao"
                    style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    app:icon="@drawable/outline_add_box_24" />

            </LinearLayout>
            <!-- ============================================================== -->

            <!-- Botão principal para adicionar a REFEIÇÃO completa (com seus alimentos) ao dia -->
            <Button
                android:id="@+id/btn_add_refeicao_ao_dia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="16dp"
                android:text="Adicionar Refeição ao Dia"
                app:icon="@drawable/baseline_add_white_24" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>
